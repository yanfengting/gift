.page image {
  width: 100%;
  height: 150px;
  display: block;
  overflow: hidden;
}

.page .title {
  position: absolute;
  left: 10px;
  bottom: 10px;
  color: white;
  font-size: 12px;
}

.img {
  display: block;
  height: 40px;
}

/* 纪念品列表 */

.gift .title {
  text-align: center;
  display: block;
  width: 100%;
  margin-top: 20px;
  margin-bottom: 20px;
  font-weight: normal;
  font-size: 15px;
  position: relative;
}

.gift .title::before {
  content: "――";
  margin-right: 10px;
  color: #777;
}

.gift .title::after {
  content: "――";
  margin-left: 10px;
  color: #777;
}

.layout {
  height: 100px;
  display: flex;
  /*row 横向  column 列表  */
